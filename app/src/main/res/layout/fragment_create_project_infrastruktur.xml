<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".unit.form.CreateUnitUmumFragment"
    android:paddingHorizontal="32dp"
    android:layout_marginTop="20dp"
    >

    <TextView
        android:id="@+id/textView1"
        style="@style/text.bold.size22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Tambah Infrastruktur"
        tools:ignore="MissingConstraints"
        />

    <LinearLayout
        android:id="@+id/container_input_tipe_infrastruktur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipe Infrastruktur"
            style="@style/paragraph"/>

        <Spinner
            android:id="@+id/spinner_tipe_infrastruktur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="14.5dp"
            android:maxLines="1"
            android:hint="Pilih Tipe Infrastruktur"
            android:textColorHint="@color/text_black_placeholder"
            android:textColor="@color/text_black"
            style="@style/paragraph"
            android:background="@drawable/edit_text_rounded_rectangle"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_input_nama_infrastuktur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/container_input_tipe_infrastruktur">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Infrastruktur"
            style="@style/paragraph"/>

        <EditText
            android:id="@+id/edit_text_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="14.5dp"
            android:maxLines="1"
            android:hint=" "
            android:textColorHint="@color/text_black_placeholder"
            android:textColor="@color/text_black"
            style="@style/paragraph"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_rounded_rectangle"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>