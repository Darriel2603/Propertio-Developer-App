<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_edit_proyek_pop_up"
            android:elevation="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Edit Proyek"
            android:drawablePadding="16dp"
            android:textAppearance="@style/text.medium.size16"
            android:drawableStart="@drawable/edit_fill0_wght400_grad0_opsz24"
            android:background="@drawable/button_pop_up_rectangle_light"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_repost_proyek_pop_up"
            android:elevation="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Repost"
            android:drawablePadding="16dp"
            android:textAppearance="@style/text.medium.size16"
            android:drawableStart="@drawable/repeat_fill0_wght400_grad0_opsz24"
            android:background="@drawable/button_pop_up_rectangle_light"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="7dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:textAppearance="@style/text.medium.size12"
            android:textColor="@color/grey_400"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Proyek:"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_proyek_pop_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            style="@style/TextAppearance.AppCompat.Widget.Switch"
            android:checked="false"
            android:text="Tayangkan"
            android:textAppearance="@style/text.regular.size16"
            android:textAllCaps="false"
            app:trackTintMode="src_atop"
            app:trackTint="@color/black"
            app:thumbTint="@color/white"
            app:thumbTextPadding="13dp"
            />




    </LinearLayout>


</com.google.android.material.card.MaterialCardView>