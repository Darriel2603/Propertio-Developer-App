<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="32.5dp"
    android:paddingBottom="150dp"
    android:paddingHorizontal="32.5dp"
    >

    <TextView
        android:id="@+id/title_unit_data_gudang"
        style="@style/text.medium.size16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Gudang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_luas_tanah_gudang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_unit_data_gudang"
        >

        <TextView
            android:id="@+id/txt_luas_tanah_gudang"
            style="@style/text.regular.size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas Tanah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edit_luas_tanah_gudang"
            style="@style/DesignSystem.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_luas_tanah_gudang"
            android:hint="m²"
            android:inputType="number"
            android:textAlignment="textStart"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_luas_bangunan_gudang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_luas_tanah_gudang"
        >

        <TextView
            android:id="@+id/txt_luas_bangunan_gudang"
            style="@style/text.regular.size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas Bangunan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/edit_luas_bangunan_gudang"
            style="@style/DesignSystem.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_luas_bangunan_gudang"
            android:hint="m²"
            android:textAlignment="textStart"
            android:inputType="number"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_tempat_parkir_gudang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_luas_bangunan_gudang"
        >

        <TextView
            android:id="@+id/txt_tempat_parkir_gudang"
            style="@style/text.regular.size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Parkir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/spinner_tempat_parkir_gudang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_rounded_rectangle"
            android:drawableEnd="@drawable/chevron_down"
            android:paddingHorizontal="14.5dp"
            android:text="Pilih Tempat Parkir"
            android:textColor="@color/text_black"
            android:textAlignment="textStart"
            android:textAppearance="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/txt_tempat_parkir_gudang"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_daya_listrik_gudang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_tempat_parkir_gudang"
        >

        <TextView
            android:id="@+id/txt_daya_listrik_gudang"
            style="@style/text.regular.size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daya Listrik"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/spinner_daya_listrik_gudang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_rounded_rectangle"
            android:drawableEnd="@drawable/chevron_down"
            android:paddingHorizontal="14.5dp"
            android:text="Pilih Daya Listrik"
            android:textColor="@color/text_black"
            android:textAlignment="textStart"
            android:textAppearance="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/txt_daya_listrik_gudang"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_akses_jalan_gudang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_daya_listrik_gudang"
        >

        <TextView
            android:id="@+id/txt_akses_jalan_gudang"
            style="@style/text.regular.size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akses Jalan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/spinner_akses_jalan_gudang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_rounded_rectangle"
            android:drawableEnd="@drawable/chevron_down"
            android:paddingHorizontal="14.5dp"
            android:text="Pilih Akses Jalan"
            android:textColor="@color/text_black"
            android:textAlignment="textStart"
            android:textAppearance="@style/paragraph"
            app:layout_constraintTop_toBottomOf="@id/txt_akses_jalan_gudang"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
