<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Space
            android:id="@+id/topSpace"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/tilte_container"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@id/topSpace">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="45dp"
                android:layout_height="57dp"
                android:padding="14sp"
                app:srcCompat="@drawable/propertio_logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:fontFamily="@font/poppins_bold"
                android:text="Propertio Register"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutContainerGreeting"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tilte_container">

            <TextView
                android:id="@+id/hello_developer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins_bold"
                android:text="Hello Developer"
                android:textSize="30sp"
                android:textStyle="bold" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/welcome_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/poppins_bold"
                android:text="Welcome back  ðŸ‘‹"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Space
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutContainerGreeting" />

        <ImageView
            android:id="@+id/gambar_login_page"
            android:layout_width="wrap_content"
            android:layout_height="141dp"
            app:flow_horizontalAlign="center"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutContainerGreeting"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutContainerGreeting"
            app:layout_constraintTop_toBottomOf="@+id/spacer"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Email"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tilte_container"
            app:layout_constraintTop_toBottomOf="@+id/gambar_login_page" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_login_background"
            android:ems="10"
            android:hint="Enter your email "
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            app:layout_constraintStart_toStartOf="@+id/title_email"
            app:layout_constraintTop_toBottomOf="@+id/title_email" />

        <TextView
            android:id="@+id/title_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Password"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tilte_container"
            app:layout_constraintTop_toBottomOf="@+id/email_input" />


        <EditText
            android:id="@+id/password_input"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_login_background"
            android:ems="10"
            android:hint="Enter your password "
            android:inputType="textPassword"
            android:padding="14dp"
            app:layout_constraintStart_toStartOf="@+id/title_password"
            app:layout_constraintTop_toBottomOf="@+id/title_password" />


        <FrameLayout
            android:id="@+id/container_reset_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="5dp"
            android:paddingBottom="29dp"

            app:layout_constraintStart_toStartOf="@+id/title_password"
            app:layout_constraintTop_toBottomOf="@+id/password_input">

            <TextView
                android:id="@+id/reset_password_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password? Reset"
                android:textColor="@color/slight_black"
                android:textSize="10sp" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/container_login_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="14dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
            app:layout_constraintStart_toStartOf="@+id/container_reset_password_link"
            app:layout_constraintTop_toBottomOf="@+id/password_input"
            app:layout_constraintVertical_bias="0.291">

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/register_button_background"
                android:fontFamily="@font/poppins_medium"
                android:maxWidth="320dp"
                android:padding="0dp"
                android:text="Log in"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.295" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_have_acn_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="2dp"
            android:paddingBottom="29dp"
            app:layout_constraintStart_toStartOf="@+id/container_login_button"
            app:layout_constraintTop_toBottomOf="@+id/container_login_button">

            <TextView
                android:id="@+id/have_acn_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account? Register here"
                android:textColor="@color/slight_black"
                android:textSize="14sp" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>