    <!--  Dasbor  -->
    <style name="card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="card.dashboard" parent="card">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>

    </style>

    <style name="card.dashboard.icon_start" parent="image.rectangle.20">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="card.dashboard.icon_end" parent="image.rectangle.20">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="tint">@color/grey_300</item>
        <item name="android:src">@drawable/outline_info_24</item>
    </style>
    <style name="card.dashboard.text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/text.semibold</item>
    </style>
    <style name="card.dashboard.number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAppearance">@style/text.medium</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="card.dashboard.type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/text.regular</item>
    </style>


    <!--  Proyek/Unit  -->
    <style name="card.image" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
