<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PropertioDeveloperApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="Theme.PropertioDeveloperApp" parent="Base.Theme.PropertioDeveloperApp" />


    <!--  START : button design system  -->
    <style name="Base.Theme.button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Primary   -->
    <style name="button.primary" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_primary_rounded_rectangle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.primary.xl" parent="button.primary">
        <item name="android:height">56dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.primary.l" parent="button.primary">
        <item name="android:height">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button.primary.m" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_primary_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">40dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.primary.s" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_primary_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Secondary   -->
    <style name="button.secondary" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_secondary_rounded_rectangle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.secondary.xl" parent="button.secondary">
        <item name="android:height">56dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.secondary.l" parent="button.secondary">
        <item name="android:height">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button.secondary.m" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_secondary_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">40dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.secondary.s" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_secondary_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Tertiary   -->
    <style name="button.tertiary" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_tertiary_rounded_rectangle</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button.tertiary.xl" parent="button.tertiary">
        <item name="android:height">56dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.tertiary.l" parent="button.tertiary">
        <item name="android:height">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="button.tertiary.m" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_tertiary_rounded</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:height">40dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button.tertiary.s" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_tertiary_rounded</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--  END : button design system  -->


    <!-- START : Custom add Button   -->
    <style name="button.add" parent="Base.Theme.button">
        <item name="android:background">@drawable/button_add_rounded_rectangle</item>
        <item name="drawableStartCompat">@drawable/baseline_add_circle_outline_24</item>
        <item name="drawableTint">@color/text_black_placeholder</item>
        <item name="android:textColor">@color/text_black_placeholder</item>
    </style>

    <!-- END   : Custom add Button   -->



    <!--  START : textfield -->


    <!--  END : textfield -->



    <!--  START : text design system  -->
    <style name="Base.Text.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Base.Text.SemiBold" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Base.Text.Medium" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Base.Text.Regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text.bold" parent="Base.Text.Bold"/>
    <style name="text.semibold" parent="Base.Text.SemiBold"/>
    <style name="text.medium" parent="Base.Text.Medium"/>
    <style name="text.regular" parent="Base.Text.Regular"/>

    <!--  TextSize 14  -->
    <style name="text.bold.size14" parent="text.bold">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.semi_bold.size14" parent="text.semibold">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.medium.size14" parent="text.medium">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.regular.size14" parent="text.regular">
        <item name="android:textSize">14sp</item>
    </style>

    <!--  TextSize 12  -->
    <style name="text.bold.size12" parent="text.bold">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text.semi_bold.size12" parent="text.semibold">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text.medium.size12" parent="text.medium">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text.regular.size12" parent="text.regular">
        <item name="android:textSize">12sp</item>
    </style>



    <style name="title.large" parent="Base.Text.Bold">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="title.medium" parent="Base.Text.Medium">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="title.small" parent="Base.Text.Medium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="paragraph" parent="Base.Text.Regular">
        <item name="android:textSize">14.5sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="paragraph.large" parent="paragraph">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="paragraph.small" parent="paragraph">
        <item name="android:textSize">10sp</item>
    </style>

    <!--  END : text design system  -->



    <!--  START : card design system  -->

    <style name="card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">8dp</item>
    </style>

    <style name="card.dashboard" parent="card">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>

    </style>

    <style name="card.dashboard.icon_start" parent="image.rectangle.20">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="card.dashboard.icon_end" parent="image.rectangle.20">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="tint">@color/grey_300</item>
        <item name="android:src">@drawable/outline_info_24</item>
    </style>
    <style name="card.dashboard.text_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">@style/text.semibold</item>
    </style>
    <style name="card.dashboard.number">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAppearance">@style/text.medium</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style name="card.dashboard.type">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/text.regular</item>
    </style>


    <!--  END : card design system  -->



    <!--  START : Icon Translation  -->
    <style name="Base.image.scalefit" parent="TextAppearance.AppCompat">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="image.rectangle.24" parent="Base.image.scalefit">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="image.rectangle.20" parent="Base.image.scalefit">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!--  START : Icon Translation  -->


    
</resources>